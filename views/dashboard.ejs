<h6>Dashboard</h6>
<h3>
    Welcome <%= name %>!
</h3>
<p>Added Food List</p>

<% if (foods) {%>
    <table class="striped">
        <thead>
            <tr>
                <th>Food</th>
                <th>Category</th>
                <th>Ingredients</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% foods.forEach(food=> { %>
                <tr>
                    <td><a href="/foods/<%=food._id%>">
                            <%= food.foodName %>
                        </a></td>
                    <td><span class="dash-status">
                            <%= food.foodCategory %>
                        </span></td>
                    <td><span class="dash-status">
                            <%= food.ingredients.toUpperCase() %>
                        </span></td>
                    <td>
                        <a href="/foods/edit/<%= food._id %> " class="btn btn-float">
                            <i class="fas fa-edit"></i>
                        </a>

                        <form action="/foods/<%= food._id %>" method="POST" id="delete-form">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn red">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <% } else {%>
        <p>You have not created any stories</p>
        <% } %>